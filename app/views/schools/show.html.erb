<div class="show-body">
<div class="container">
  <div class="row school-content">
    <div class="col-8">
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="<%= @school.main_photo %>" alt="...">
          </div>
          <div class="carousel-item">
            <img src="<%= @school.photo1 %>" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="<%= @school.photo2 %>" class="d-block w-100" alt="...">
          </div>
        </div>
      </div>
      <h1 class="school-title"><%= @school.name %></h1>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="Home" aria-selected="true">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="packs-tab" data-toggle="tab" href="#packs" role="tab" aria-controls="Packs" aria-selected="false">Packs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="spot-tab" data-toggle="tab" href="#spot" role="tab" aria-controls="Spot" aria-selected="false">Spot</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="forecast-tab" data-toggle="tab" href="#forecast" role="tab" aria-controls="Forecast" aria-selected="false">Surf forecast</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="Home-tab">
          <ul>
            <li> <strong>Location :</strong> <%= @school.address  %> </li>
            <li><strong>Description :</strong><%= @school.description %> </li>
            <li><strong>Email :</strong><%= @school.email %> </li>
            <li><strong>Phone :</strong><%= @school.phone_number %> </li>
            <li><strong>Spoken Language :</strong><%= @school.language %> </li>
            <li><strong>Spot level :</strong><%= @school.level %> </li>
          </ul>
        </div>
        <div class="tab-pane fade" id="packs" role="tabpanel" aria-labelledby="packs-tab">
          <ul>
            <% @school.packs.each do |pack|%>
              <li><strong><%= pack.title %></strong> - <%= pack.price %>€/personne <br>
                <%= pack.description %> <br>
                Limité à
                <%= pluralize pack.max_persons, "personne" %> <br>
              </li>
            <% end %>
          </ul>

        </div>
        <div class="tab-pane fade" id="spot" role="tabpanel" aria-labelledby="spot-tab">
          <ul>
            <li> Sand Beach Break</li>
            <li> Good to surf all year round and every tides</li>
            <li> Danger: tide currents</li>
          </ul>
        </div>
        <div class="tab-pane fade" id="forecast" role="tabpanel" aria-labelledby="forecast-tab">
          <ul>
            <li> Date: <%= @data[:timestamp] %> </li>
            <li> Swell: <%= @data[:swell] %> </li>
            <li> Wind: <%= @data[:wind] %> </li>
            <li> Temperature: <%= @data[:condition] %> </li>
          </ul>
          <a href="http://magicseaweed.com"><img src="https://im-1-uk.msw.ms/msw_powered_by.png"></a>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class= "book-button">
        <%= link_to "Book now!", new_school_booking_path(@school), class: "btn btn btn-gradient btn-ocean", id: "book-now"%>
      </div>
      <% @school.reviews.each do |review| %>
      <div class="card-product w-100">
        <img id="avatar" class="avatar" alt="avatar" src="<%= review.booking.user.avatar %>" />
        <div id="card-info" class="card-product-infos">
            <p><% rating = review.rating %>
           <% rating.times do %>
            <i class="fas fa-star"></i>
             <% end %>
             <% (5-rating).times do %>
                <i class="far fa-star"></i>
                <% end %>
           </p>
            <p><%= review.content %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>



