<div class="show-body">
  <div class="container">
    <div class="row school-content">
      <div class="col-8">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= @school.main_photo %>" alt="...">
            </div>
            <div class="carousel-item">
              <img src="<%= @school.photo1 %>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="<%= @school.photo2 %>" class="d-block w-100" alt="...">
            </div>
          </div>
        </div>
      </div>
      <div class="col-4 mt-3">
          <% unless @reviews.empty? %>
            <% bests = @reviews.where(rating: 5) %>
            <% if bests.empty? %>
              <% review = @reviews.order(:rating).last %>
              <div class="card-product">
                  <img id="avatar" class="avatar" alt="avatar" src="<%= review.booking.user.avatar %>" />
                  <div class="card-product-infos">
                    <p><% rating = review.rating %>
                    <% rating.times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                    <% (5-rating).times do %>
                      <i class="far fa-star"></i>
                    <% end %>
                    </p>
                <p> <strong><%= review.booking.user.name %></strong>  <br>
                <%= review.created_at.strftime("%B %Y") %> <br>
                </p>
                <p><%= review.content %></p>
                  </div>
                </div>
          <% else %>
            <% best = bests.sample %>
            <div class="card-product w-100">
              <img id="avatar" class="avatar" alt="avatar" src="<%= best.booking.user.avatar %>" />
              <div id="card-info" class="card-product-infos">
                <p><% rating = best.rating %>
                <% rating.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (5-rating).times do %>
                  <i class="far fa-star"></i></p>
                <% end %>
                <p> <strong><%= best.booking.user.name %></strong>  <br>
                <%= best.created_at.strftime("%B %Y") %> <br>
                </p>
                <p><%= best.content %></p>
              </div>
            </div>
            <% end %>
          <% end %>
        <div class= "book-button">
          <div class = "book-now-btn">
            <%= link_to "Book now!", new_school_booking_path(@school), class: "btn btn btn-gradient btn-ocean", id: "book-now"%>
          </div>
        </div>
      </div>
      <div class="col-8">
        <h1 class="school-title"><%= @school.name %></h1>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link select-tabs active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="Home" aria-selected="true">Description</a>
          </li>
          <li class="nav-item">
            <a class="nav-link select-tabs" id="packs-tab" data-toggle="tab" href="#packs" role="tab" aria-controls="Packs" aria-selected="false">Packs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link select-tabs" id="spot-tab" data-toggle="tab" href="#spot" role="tab" aria-controls="Spot" aria-selected="false">Spot</a>
          </li>
          <li class="nav-item">
            <a class="nav-link select-tabs" id="forecast-tab" data-toggle="tab" href="#forecast" role="tab" aria-controls="Forecast" aria-selected="false">Surf forecast</a>
          </li>
          <li class="nav-item">
            <a class="nav-link select-tabs" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="Reviews" aria-selected="false">Reviews</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="Home-tab">
            <ul>
              <li> <strong>Location :</strong> <%= @school.address  %> </li>
              <li><strong>Description :</strong><%= @school.description %> </li>
              <li><strong>Email :</strong><%= @school.email %> </li>
              <li><strong>Phone :</strong><%= @school.phone_number %> </li>
              <li><strong>Spoken Language :</strong><%= @school.language %> </li>
              <li><strong>Spot level :</strong><%= @school.level %> </li>
            </ul>
          </div>
          <div class="tab-pane fade" id="packs" role="tabpanel" aria-labelledby="packs-tab">
            <ul>
              <% @school.packs.each do |pack|%>
                <li><strong><%= pack.title %></strong> - <%= pack.price %>€/personne <br>
                  <%= pack.description %> <br>
                  Limité à
                  <%= pluralize pack.max_persons, "personne" %> <br>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="tab-pane fade" id="spot" role="tabpanel" aria-labelledby="spot-tab">
            <ul>
              <li> Sand Beach Break</li>
              <li> Good to surf all year round and every tides</li>
              <li> Danger: tide currents</li>
            </ul>
          </div>
          <div class="tab-pane fade" id="forecast" role="tabpanel" aria-labelledby="forecast-tab">
            <p class="text-slide">- Slide your mouse in the bar below to see the forecast -</p>
            <div id="cursor-move" data-wind="<%= @wind.to_json %>" data-swell="<%= @swell.to_json %>" data-height="<%= @height.to_json %>"data-speed="<%= @speed.to_json %>"></div>
             <div div onmousemove="myFunction(event)"></div>
            <div id="chart-container" style="width:100%; height:400px;"></div>
            <div id="wind-chart-container" style="width:100%; height:400px;"></div>
            <div class="magic-logo">
            <a href="http://magicseaweed.com"><img class="magic" src="https://im-1-uk.msw.ms/msw_powered_by.png"></a>
            </div>
          </div>
          <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
            <ul>
              <% @reviews.order(:created_at).each do |review| %>
                <li class="review-card">
                  <div>
                    <img id="avatar" class="avatar" alt="avatar" src="<%= review.booking.user.avatar %>" />
                  </div>
                  <div>
                    <p><% rating = review.rating %>
                <% rating.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (5-rating).times do %>
                  <i class="far fa-star"></i>
                <% end %> <br>
                <strong><%= review.booking.user.name %></strong>  <br>
                <%= review.created_at.strftime("%B %Y") %> <br>
                <%= review.content %></p>
                    <% if review.answer.present? %>
                      <p class="answer"><strong>Surf school :</strong> <%= review.answer.content %> </p>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div id="weather" class="col-4 weather-chart d-none">
        <div class="arrow-map">
          <div id="static-map" style="background-image: url('<%= image_path "view-hossegor.png"  %>')">
            <div class="compass" style="background-image: url('<%= image_path "cadran-detoure.png"  %>')">
              <div id="swell">
                <div class="arrow"></div>
              </div>
              <div id="wind">
                <div class="arrow"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="shom">
          <script src="https://services.data.shom.fr/hdm/vignette/petite/BOUCAU-BAYONNE?locale=fr"></script>
        </div>
      </div>
    </div>
  </div>
</div>
